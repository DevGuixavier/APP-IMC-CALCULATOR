<resources>

    <!-- Tema base -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Personalizações gerais do app -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
    </style>

    <!-- Estilo para os EditTexts -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <!-- Adicionado: android:background -->
        <!-- Define o drawable de fundo para os EditTexts -->
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <!-- Estilo para o botão -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:minWidth">250dp</item>
        <!-- Define o drawable de fundo para os botões -->
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <!-- Estilo para o TextView de resultado -->
    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#80FFFFFF</item>
    </style>

</resources>